<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000036">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/cover">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/star_num_shape"
            android:layout_marginTop="35dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="35dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                android:background="@mipmap/starnum"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1500"
                android:textSize="32sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="520dp"
                android:layout_height="230dp"
                android:src="@mipmap/funlike_text2">
            </ImageView>

            <Button
                android:id="@+id/index_startBtn"
                android:layout_width="378dp"
                android:layout_height="115dp"
                android:background="@mipmap/index_imgbutton_start"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="35dp">
            </Button>

            <Button
                android:id="@+id/index_closeBtn"
                android:layout_width="378dp"
                android:layout_height="115dp"
                android:background="@mipmap/index_imgbutton_close">
            </Button>
        </LinearLayout>

        <Button
            android:id="@+id/index_settingBtn"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:background="@mipmap/settingbtn"
            android:layout_marginTop="55dp"
            android:layout_marginRight="55dp"
            android:layout_alignParentRight="true">
        </Button>
    </RelativeLayout>
</RelativeLayout>